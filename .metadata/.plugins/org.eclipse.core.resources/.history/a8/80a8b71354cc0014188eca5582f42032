package com.satya.core;

public class Test {

	public static void main(String[] args) {
		
	 int x=2;
	 int y=3;
	 int z=4;
	 
	 powercalculate(x,y,z);

	}

	private static void powercalculate(int x, int y, int z) {
		System.out.println(powercalculate(powercalculate(x,y),z));
		
	}
	
	private static int powercalculate(int x,int y){
		if(y==1)
			return x;
		else
			return x* powercalculate(x,y-1);
	 }

}
